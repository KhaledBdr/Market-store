<%- include('parts/header') %> 
<body>
    
<%- include("parts/nav-bar") %> 

<div class="container text-center">
    <h3 class="text-primary mt-4 fw-bolder bg-success p-3 d-inline-block"> Creating Account</h3>
    <form action="/signup" method="POST">
        <input type="text" name="name" class="form-control mb-4" placeholder="Name" >

        <% let usernameError = validationErrors.find(err=> err.param === "name") %> 
        <% if(usernameError){  %> 
            <div class="alert alert-warning fw-bolder">
                <%= usernameError.msg  %> 
            </div>
        <% } %> 

        <input type="email" name="email" class="form-control mb-4" placeholder="Email" >

        <% let emailError = validationErrors.find(err=> err.param === "email") %> 
        <% if(emailError){  %> 
            <div class="alert alert-warning fw-bolder">
                <%= emailError.msg  %> 
            </div>
        <% } %> 


        <input type="password" name="password" class="form-control mb-4" placeholder="Password" >

        <% let passwordError = validationErrors.find(err=> err.param === "password") %> 
        <% if(passwordError){  %> 
            <div class="alert alert-warning fw-bolder">
                <%= passwordError.msg  %> 
            </div>
        <% } %>


        <input type="password" name="confirmpassword" class="form-control mb-4" placeholder="Confirm Your Password" >

        <% let ConfirmPasswordError = validationErrors.find(err=> err.param === "confirmpassword") %> 
        <% if(ConfirmPasswordError){  %> 
            <div class="alert alert-warning fw-bolder">
                <%= ConfirmPasswordError.msg  %> 
            </div>
        <% } %>
        
        <input type="submit" value="Sign up" class="btn btn-primary ">
    </form>
   
    <div class="mt-4">
        Already have an account ? so.. <a href="/login">Login</a>
    </div>

</div>

<%- include("parts/footer") %> 
</body>