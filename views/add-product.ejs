<%- include('parts/header') %> 
<link rel="stylesheet" href="/css/main.css">
<body>

    <%- include('parts/nav-bar') %> 
    <div class=" container mt-4">
        <div class="container">
        <h1 class=" text-center text-primary bg-danger d-inline-block p-3 border-5 border-primary w-50 family"> Add Product</h1>
        <form action="/admin/add" method="post" enctype="multipart/form-data">
            <div class="mb-3 w-50">
                <label for="exampleFormControlInput1 family" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="name" id="exampleFormControlInput1" >
              </div>
            <% let nameError = validationErrors.find(err => err.param === 'name') %> 
            <% if(nameError){ %> 
                <p class="alert alert-danger">
                    <%= nameError.msg  %> 
                </p>
            <% } %> 

            <div class="mb-3 w-50">
                <label for="exampleFormControlInput1" class="form-label family">Product Price</label>
                <input type="number" class="form-control" name="price" id="exampleFormControlInput1" >
              </div>
            <% let priceError = validationErrors.find(err => err.param === 'price') %> 
            <% if(priceError){ %> 
                <p class="alert alert-danger">
                    <%= priceError.msg  %> 
                </p>
            <% } %> 

            <div class="mb-3 w-50">
                <label for="exampleFormControlTextarea1" class="form-label family">Description</label>
                <textarea  name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>


              <div class="mb-3 w-50">
              <select class="form-select form-select-lg mb-3" name="category" aria-label=".form-select-lg example">
                <option selected>Select Category</option>
                <option value="phone">phone</option>
                <option value="accessories">Accessories</option>
                <option value="laptop">laptop</option>
                <option value="clothes">Clothes</option>
              </select>
            </div>

            <div class="mb-3 w-50">
                <label for="formFileMultiple" class="form-label family">Product Image</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image">
              </div>
<% if(validationErrorsImage.length !== 0 ){ %>
  <p class="alert aletrt-danger w-50">
    <%= validationErrorsImage[0].msg %> 
  </p>
  <% } %> 
              <div class=" w-50 d-flex align-content-center">
                <input type="submit" class="btn btn-primary btn-lg m-auto"  value="Add Product"></input>
              </div>
        </form>
        </div>

    </div>
    <%- include('parts/footer') %> 
